<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_discount" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.discount</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='account_discount_income_allocation_id']" position="after">
                <div class="content-group">
                    <setting string="Allowed Discount">
                        <field name="allowed_discount" widget="upgrade_boolean"/>
                    </setting>

                    <div class="row mt8">
                    </div>
                    <div class="row mt8" invisible="allowed_discount != 1">
                        <label for="allowed_discount_account_sales_id"
                               class="col-lg-5 o_light_label" string="Allowed Discount (Account Sales)"/>
                        <field name="allowed_discount_account_sales_id"/>
                    </div>
                    <div class="row mt8" invisible="allowed_discount != 1">
                        <label for="allowed_discount_account_purchase_id"
                               class="col-lg-5 o_light_label" string="Allowed Discount (Account Purchase)"/>
                        <field name="allowed_discount_account_purchase_id"/>
                    </div>

                </div>
            </xpath>
        </field>
    </record>
</odoo>
