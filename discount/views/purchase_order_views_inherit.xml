<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_view_form_inherit_discount" model="ir.ui.view">
        <field name="name">purchase.order.view.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']//list//field[@name='discount']" position="after">
                <field name="discount_amount"/>
            </xpath>

            <xpath expr="//group[@class='oe_subtotal_footer']/field[@name='tax_totals']" position="replace">
                <field name="amount_untaxed" widget="monetary" string="Untaxed Amount" readonly="1"/>
                <field name="tax_totals" widget="monetary" string="Untaxed Amount" readonly="1"/>

                <field name="total_discount" widget="monetary" string="Total Discount" readonly="1"/>

                <field name="amount_total" widget="monetary" string="Total" readonly="1"
                       class="oe_subtotal_footer_separator"/>
            </xpath>
        </field>
    </record>
</odoo>
